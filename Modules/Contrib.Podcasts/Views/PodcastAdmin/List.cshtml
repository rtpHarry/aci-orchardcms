@using Contrib.Podcasts.Extensions;
@using Orchard.Core.Contents.ViewModels;
@using Orchard.Utility.Extensions;

@{ Layout.Title = T("Manage Podcasts").ToString(); }
@if (Model.ContentItems.Items.Count == 0) {
  <div class="info message">@T("There are no podcasts for you to see. Want to <a href=\"{0}\">add one</a>?", Url.PodcastCreate())</div>  
} else {
  @Display(Model.ContentItems)
}