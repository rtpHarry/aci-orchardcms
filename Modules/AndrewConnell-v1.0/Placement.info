<Placement>
  <Match ContentType="Page">
    <Match DisplayType="Detail">
        <Place Parts_Title="/Featured:1" />
        <Place Parts_Common_Metadata="/Featured:2" />
        <Place Parts_ListOfComments="-" />
    </Match>
  </Match>

  <Match ContentType="BlogPost">
    <Match DisplayType="Detail">
        <Place Parts_Title="/Featured:1" />
        <Place Parts_Common_Metadata="/Featured:2" />
        <Place Parts_ListOfComments="-" />
    </Match>
  </Match>

  <Match Path="/Contact">
    <Match DisplayType="Detail">
      <Place Parts_Title="/Featured:1" />
    </Match>
  </Match>

  <Match Path="/Search">
    <Place Parts_TagName="/Featured:1" />
  </Match>

  <!-- remove the homepage's title, publish date & comments shapes from the homepage rendering -->
